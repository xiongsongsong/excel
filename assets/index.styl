body
  color red

.table-wrapper
  border 1px red solid
  padding-left 40px
  padding-top 40px
  height 500px
  position relative
  .fields
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    background url(field.png) 100px 0 repeat-y, url(field.png) 200px 0 repeat-y, url(field.png) 300px 0 repeat-y
  .rows
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background url(rows.png) 0 100px repeat-x, url(rows.png) 0 200px repeat-x, url(rows.png) 0 300px repeat-x, url(rows.png) 0 400px repeat-x

