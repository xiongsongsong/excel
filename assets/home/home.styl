@import "../global/global.styl"

#sidebar
  position absolute
  left 0
  top 42px
  bottom 0
  width 200px
  background #fff
  padding-top 1em
  li
    a
      font-size 14px
      display block
      padding 1em 0
      text-indent 1em

    a:hover
      background red
  #my-page
    background #eee

#content
  position absolute
  left 200px
  top 42px
  right 0
  bottom 0
  background #eee
  table
    font-size 12px
    margin 1em auto
    width 98%
    text-align left
    border-spacing 0
    border-collapse collapse
    background #f9f9f9
    th
      background #f2f2f2
      padding 15px
    th, td
      padding 15px 8px
      border-bottom solid 1px #f0f0f0
